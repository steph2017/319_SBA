doctype html
html
  head
    title= "Intro Page"
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav
          li.nav-item
            a.nav-link.dropdown-toggle(id="logsDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Logs
            .dropdown-menu(aria-labelledby="logsDropdown")
              a.dropdown-item(href="/logs") View Logs
              a.dropdown-item(href="/logs/add") Add Log
              a.dropdown-item(href="/logs/edit") Edit Log
          li.nav-item
            a.nav-link.dropdown-toggle(id="foodsDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Foods
            .dropdown-menu(aria-labelledby="foodsDropdown")
              a.dropdown-item(href="/foods") View Foods
              a.dropdown-item(href="/foods/add") Add Food
              a.dropdown-item(href="/foods/edit") Edit Food
          li.nav-item
            a.nav-link.dropdown-toggle(id="usersDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Users
            .dropdown-menu(aria-labelledby="usersDropdown")
              a.dropdown-item(href="/users") View Users
              a.dropdown-item(href="/users/edit") Edit User Profile

  br
  br
  br
  br
  h1= "Welcome to Calorie Tracker!"
  br
  div
    h2= "How to use Calorie Tracker API"
    div
    h3="Data Categories"
    p= "There are 3 categories of data: Users, Logs, and Foods. To look up all data associated with each category simply navigate to either /users /foods or /logs."
    p= "For example, to look up all foods:"
      br
      code= "localhost:3180/foods"

    div
    h3= "Fetching Data"
    p= "To locate a single data entry, use the id number by either adding it to the URL or using a search query"
      br
      code= "localhost:3180/foods/3"
      br
      code= "localhost:3180/users?user=2"

    div
    h3= "Adding Data"
    p="Navigate to /add to submit new data:"
      br
      code= "localhost:3180/add"
  
    div
    h3= "Deleting Data"
    p="Navigate to the category, then the id number, then \"delete\" in order to remove the specified record:"
      br
      code= "localhost:3180/users/4/delete"

    div
    h3= "Editing Data"
    p="Navigate to the category, then the id number, then \"edit\", and finally use search queries in order to update the specified record:"
      br
      code= "localhost:3180/logs/4/edit?date=20230728&foodids=1&foodids=1&foodids=2&foodids=3&foodids=4"

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
