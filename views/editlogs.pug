  body
    .container
        h1 Logs
        table.table.table-striped
          thead
            tr
              th Log Entry
              th Edit
          tbody
            each log in logs
              tr
                td= log.id + ": " + log.date + " - " + log.user_id
                td
                  a.btn.btn-primary(href=`/logs/${log.id}/edit`) Edit



 
